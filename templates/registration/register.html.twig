{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            background-color: color-mix(in srgb, palegreen 5%, transparent);
        }
    </style>
{% endblock stylesheets %}

{% block content %}
    <section class="vh-100">
        <div class="card w-50 h-75 m-auto p-5 bg-white border-0 shadow text-center">
            <div class="card-title py-3">
                <h1 class="mb-3 fw-normal">Register</h1>
            </div>

            <div class="card-body pt-5">
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {attr: {class: 'w-75 m-auto'}}) }}
                {{ form_row(registrationForm.username, {
                    row_attr: {class: 'form-floating mb-3'},
                    attr: {placeholder: 'Enter your username'},
                    label: 'Your username'}) }}
                {{ form_row(registrationForm.plainPassword, {
                    row_attr: {class: 'form-floating mb-3'},
                    attr: {placeholder: 'Enter the desired password'},
                    label: 'Your Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {label: 'I agree the the Terms & Conditions'}) }}

                <div class="d-grid">
                    <button type="submit" class="btn text-dark" style="background-color: limegreen;">Register</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock content %}
